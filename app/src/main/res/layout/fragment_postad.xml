<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.szara_000.team02_mobile.Postad"
   >


    <ScrollView
        android:id="@+id/register_form"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="false">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp">

                <LinearLayout
                    android:id="@+id/email_login_form"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:weightSum="1"
                    android:layout_margin="25dp">


                    <TextView
                        android:text="Post Ad"
                        android:layout_width="match_parent"
                        android:layout_height="47dp"
                        android:id="@+id/textView4"
                        android:textSize="24sp"
                        android:textStyle="normal|bold" />

                    <TextView
                        android:text="Pictures"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/myadtextview"
                        android:textSize="18sp"
                        android:clickable="false"
                        android:focusable="false"
                        android:focusableInTouchMode="false" />

                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent">

                            <ImageView

                                android:layout_height="250dp"
                                app:srcCompat="@drawable/numberone"
                                android:id="@+id/imagepic1"
                                android:layout_weight="1"
                                android:layout_width="250dp" />

                            <ImageView
                                android:layout_height="250dp"
                                app:srcCompat="@drawable/numbertwo"
                                android:id="@+id/imagepic2"
                                android:layout_weight="1"
                                android:layout_width="250dp" />

                            <ImageView
                            android:layout_height="250dp"
                            app:srcCompat="@drawable/numberthree"
                            android:id="@+id/imagepic3"
                            android:layout_weight="1"
                            android:layout_width="250dp" />
                        </LinearLayout>
                    </HorizontalScrollView>


                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <AutoCompleteTextView
                            android:id="@+id/postadtitle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Title"
                            android:maxLines="1"
                            android:inputType="text" />


                    </android.support.design.widget.TextInputLayout>
                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:text="Platform"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/myadtextview"
                            android:textSize="18sp"
                            android:clickable="false"
                            android:focusable="false"
                            android:focusableInTouchMode="false" />

                        <Spinner

                            android:layout_width="match_parent"
                            android:layout_height="46dp"
                            android:id="@+id/postadspinner"

                            android:spinnerMode="dialog"
                            />


                    </android.support.design.widget.TextInputLayout>
                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">


                        <AutoCompleteTextView
                            android:id="@+id/postaddesc"
                            android:layout_width="match_parent"
                            android:layout_height="175dp"
                            android:hint="Description"
                            android:maxLines="10"
                            android:singleLine="false"
                            android:inputType="text" />

                    </android.support.design.widget.TextInputLayout>
                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <AutoCompleteTextView
                            android:id="@+id/postadlocation"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Location"
                            android:maxLines="1"
                            android:inputType="text" />




                    </android.support.design.widget.TextInputLayout>
                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <AutoCompleteTextView
                            android:id="@+id/postadprice"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Price"
                            android:maxLines="1"
                            android:inputType="number|numberDecimal" />

                        <CheckBox
                            android:text="Negotiable"
                            android:layout_width="123dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/postadneg" />


                    </android.support.design.widget.TextInputLayout>
                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">


                        <CheckBox
                            android:text="Show Number"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/postadnumber"
                            android:layout_weight="1" />
                    </android.support.design.widget.TextInputLayout>
                    <Button
                        android:id="@+id/postadbtn"
                        style="?android:textAppearanceSmall"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="Post Ad"
                        android:textStyle="bold" />
                </LinearLayout>

            </android.support.v7.widget.CardView>
        </RelativeLayout>
    </ScrollView>

</FrameLayout>
